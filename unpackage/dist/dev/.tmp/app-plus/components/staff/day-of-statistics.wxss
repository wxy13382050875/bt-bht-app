@charset "UTF-8";
/*统计标题样式*/
/*box*/
/*统计页面头部 chart-header-bg*/
.day-of-statistics-box {
  padding: 18rpx;
}
.day-of-statistics-box .content {
    display: -webkit-box;
    display: -webkit-flex;
    display: -ms-flexbox;
    display: flex;
    -webkit-align-content: center;
        -ms-flex-line-pack: center;
            align-content: center;
    height: 164rpx;
    background: -webkit-gradient(linear, left bottom, left top, from(#f16b73), to(#ef4455));
    background: -o-linear-gradient(bottom, #f16b73, #ef4455);
    background: linear-gradient(0deg, #f16b73, #ef4455);
    border-radius: 10rpx;
    color: #fff;
}
.day-of-statistics-box .content .borderer-count,
    .day-of-statistics-box .content .vehicle-count {
      -webkit-box-flex: 1;
      -webkit-flex: 1;
          -ms-flex: 1;
              flex: 1;
      display: -webkit-box;
      display: -webkit-flex;
      display: -ms-flexbox;
      display: flex;
      -webkit-box-orient: vertical;
      -webkit-box-direction: normal;
      -webkit-flex-direction: column;
          -ms-flex-direction: column;
              flex-direction: column;
      -webkit-box-align: center;
      -webkit-align-items: center;
          -ms-flex-align: center;
              align-items: center;
      -webkit-box-pack: center;
      -webkit-justify-content: center;
          -ms-flex-pack: center;
              justify-content: center;
}
.day-of-statistics-box .content .borderer-count .count,
      .day-of-statistics-box .content .vehicle-count .count {
        font-size: 46rpx;
        font-weight: bold;
}
.day-of-statistics-box .content .borderer-count .title,
      .day-of-statistics-box .content .vehicle-count .title {
        font-size: 26rpx;
}
.day-of-statistics-box .content .vehicle-count {
      position: relative;
}
.day-of-statistics-box .content .vehicle-count::before {
        position: absolute;
        left: 0;
        content: '';
        width: 2rpx;
        height: 50px;
        background-color: #fff;
}


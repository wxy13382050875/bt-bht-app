/*统计页面头部 chart-header-bg*/
.navbar-container {
  position: fixed;
  top: 0;
  right: 0;
  left: 0;
  z-index: 1993;
  background: -webkit-linear-gradient(left, #e42332, #e40011, #b10613);
  background: linear-gradient(90deg, #e42332, #e40011, #b10613);
}
.navbar-container .navbar-header {
    position: relative;
    display: -webkit-box;
    display: -webkit-flex;
    display: flex;
    -webkit-box-pack: justify;
    -webkit-justify-content: space-between;
            justify-content: space-between;
    -webkit-box-align: center;
    -webkit-align-items: center;
            align-items: center;
    padding: 0 18rpx;
}
.navbar-container .navbar-header .navbar-header--logo {
      margin-right: 16rpx;
      width: 179rpx;
      height: 57rpx;
}
.navbar-container .navbar-header .navbar-header--logo image {
        width: 100%;
        height: 100%;
}
.navbar-container .navbar-header .navbar-header--search {
      -webkit-box-flex: 1;
      -webkit-flex: 1;
              flex: 1;
      display: -webkit-box;
      display: -webkit-flex;
      display: flex;
      -webkit-box-align: center;
      -webkit-align-items: center;
              align-items: center;
      padding-left: 18rpx;
      height: 58rpx;
      background: white;
      opacity: 1;
      border-radius: 28rpx;
}
.navbar-container .navbar-header .navbar-header--search .search-icon {
        font-size: 38rpx;
        color: #ff3333;
}
.navbar-container .navbar-header .navbar-header--search .search-text {
        margin-left: 16rpx;
        font-size: 22rpx;
        color: #898989;
}
.navbar-container .navbar-header .navbar-header--message {
      margin-left: 16rpx;
}
.navbar-container .navbar-header .navbar-header--message .message-icon {
        font-size: 32px;
        color: #fff;
}
.navbar-container .navbar-header .navbar-header--message .message-box {
        display: block;
        padding: 1px 5px;
        background: #ff3333;
        border: 1px solid #f7f3f0;
        border-radius: 50px;
        position: absolute;
        top: 3px;
        right: 4px;
        font-size: 16rpx;
        text-align: center;
        color: #fff;
}


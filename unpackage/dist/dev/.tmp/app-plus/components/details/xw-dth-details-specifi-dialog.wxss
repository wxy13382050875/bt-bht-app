@charset "UTF-8";
/*统计标题样式*/
/*box*/
/*统计页面头部 chart-header-bg*/
.dialog {
  background: #ffffff;
  border-radius: 30rpx 30rpx 0px 0px;
}
.dialog .dialog-header {
    margin-left: 20rpx;
    margin-right: 10px;
    height: 320rpx;
    display: -webkit-box;
    display: -webkit-flex;
    display: flex;
    -webkit-box-pack: justify;
    -webkit-justify-content: space-between;
            justify-content: space-between;
    border-bottom: 1rpx solid #a7a7a7;
}
.dialog .dialog-header .info {
      display: -webkit-box;
      display: -webkit-flex;
      display: flex;
      -webkit-box-pack: justify;
      -webkit-justify-content: space-between;
              justify-content: space-between;
      -webkit-box-align: center;
      -webkit-align-items: center;
              align-items: center;
}
.dialog .dialog-header .info image {
        width: 240rpx;
        height: 240rpx;
}
.dialog .dialog-header .info .content {
        margin-left: 30rpx;
}
.dialog .dialog-header .info .content .price {
          font-size: 32rpx;
          color: #ff3333;
}
.dialog .dialog-header .info .content .inventory {
          font-size: 22rpx;
          color: #999999;
}
.dialog .dialog-header .info .content .selectType {
          font-size: 24rpx;
          color: #333333;
}
.dialog .dialog-header .close {
      margin-top: 38rpx;
}
.dialog .dialog-header .close image {
        width: 38rpx;
        height: 38rpx;
}
.dialog .dialog-content {
    margin-left: 20rpx;
    margin-right: 20rpx;
}
.dialog .dialog-content .package-type {
      border-bottom: 1rpx solid #a7a7a7;
}
.dialog .dialog-content .package-type .name {
        height: 80rpx;
        line-height: 80rpx;
        margin-bottom: 20rpx;
        font-size: 28rpx;
        color: #333333;
}
.dialog .dialog-content .package-type .tag-list {
        display: -webkit-box;
        display: -webkit-flex;
        display: flex;
        -webkit-flex-wrap: wrap;
                flex-wrap: wrap;
}
.dialog .dialog-content .package-type .tag-list .tag {
          padding: 0 10rpx;
          margin-bottom: 10rpx;
}
.dialog .dialog-content .buy-number {
      height: 106rpx;
      display: -webkit-box;
      display: -webkit-flex;
      display: flex;
      -webkit-box-pack: justify;
      -webkit-justify-content: space-between;
              justify-content: space-between;
      border-bottom: 1rpx solid #a7a7a7;
      -webkit-box-align: center;
      -webkit-align-items: center;
              align-items: center;
}
.dialog .dialog-content .buy-number .name {
        font-size: 28rpx;
        color: #333333;
}
.dialog .dialog-finish {
    margin-top: 200rpx;
    margin-left: 20rpx;
    margin-right: 10px;
    height: 117rpx;
    width: 100%;
    display: -webkit-box;
    display: -webkit-flex;
    display: flex;
    -webkit-box-align: center;
    -webkit-align-items: center;
            align-items: center;
}
.dialog .dialog-finish .finish-btn {
      height: 87rpx;
      width: 690rpx;
      background: #ff3333;
      opacity: 1;
      border-radius: 41px 41px 41px 41px;
      color: #ffffff;
      font-size: 30rpx;
}


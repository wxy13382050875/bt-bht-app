@charset "UTF-8";
/*统计标题样式*/
/*box*/
/*统计页面头部 chart-header-bg*/
.personal {
  background: #E40011;
}
.personal .personal-header {
    display: -webkit-box;
    display: -webkit-flex;
    display: flex;
    -webkit-box-pack: center;
    -webkit-justify-content: center;
            justify-content: center;
    -webkit-box-align: center;
    -webkit-align-items: center;
            align-items: center;
    height: 80rpx;
    width: 100%;
    background: #F2F2F2;
    line-height: 80rpx;
}
.personal .personal-header .title {
      height: 100%;
      font-size: 30rpx;
      color: #999999;
}
.personal .personal-info {
    padding: 40rpx;
    display: -webkit-box;
    display: -webkit-flex;
    display: flex;
    -webkit-box-pack: justify;
    -webkit-justify-content: space-between;
            justify-content: space-between;
}
.personal .personal-info .left-item {
      display: -webkit-box;
      display: -webkit-flex;
      display: flex;
      -webkit-box-align: center;
      -webkit-align-items: center;
              align-items: center;
}
.personal .personal-info .left-item image {
        width: 100rpx;
        height: 100rpx;
}
.personal .personal-info .left-item .title {
        color: #ffffff;
        font-size: 24rpx;
}
.personal .personal-info .left-item .describe {
        color: #ffffff;
        font-size: 20rpx;
}
.personal .personal-info .right-item {
      display: -webkit-box;
      display: -webkit-flex;
      display: flex;
      -webkit-box-align: center;
      -webkit-align-items: center;
              align-items: center;
}
.personal .personal-info .right-item image {
        width: 12rpx;
        height: 25rpx;
        vertical-align: middle;
        margin-left: 20rpx;
}


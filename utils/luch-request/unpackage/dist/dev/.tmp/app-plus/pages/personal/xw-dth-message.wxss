@charset "UTF-8";
/*统计标题样式*/
/*box*/
/*统计页面头部 chart-header-bg*/
.message-info {
  background: #FFFFFF;
  height: 150rpx;
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  -webkit-box-pack: justify;
  -webkit-justify-content: space-between;
          justify-content: space-between;
  -webkit-box-align: center;
  -webkit-align-items: center;
          align-items: center;
  border-bottom: 1rpx solid #f2f2f2;
  width: 100%;
}
.message-info .msg-left {
    padding: 26rpx;
}
.message-info .msg-left image {
      width: 98rpx;
      height: 98rpx;
}
.message-info .msg-middle {
    text-align: left;
    width: 100%;
    height: 120rpx;
    line-height: 60rpx;
}
.message-info .msg-middle .msg-title {
      font-size: 32rpx;
      color: #333333;
}
.message-info .msg-middle .msg-dsc {
      font-size: 26rpx;
      color: #999999;
      overflow: hidden;
      text-overflow: ellipsis;
      white-space: nowrap;
}
.message-info .msg-right {
    text-align: right;
    width: 140rpx;
    margin-right: 20rpx;
    height: 120rpx;
    line-height: 60rpx;
    float: right;
}
.message-info .msg-right .msg-time {
      font-size: 32rpx;
      color: #333333;
}
.message-info .msg-right .msg-num {
      color: #FFFFFF;
      background: #FF3333;
      border-radius: 15rpx;
      text-align: center;
      line-height: 37rpx;
      width: 37rpx;
      height: 37rpx;
      float: right;
}


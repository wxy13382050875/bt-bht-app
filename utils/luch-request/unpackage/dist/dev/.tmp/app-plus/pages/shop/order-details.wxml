<view class="order-details-container"><nav-bar-back vue-id="1" title="订单详情" popType="1" bind:__l="__l"></nav-bar-back><bht-layout-container vue-id="2" bottom="{{40}}" bind:__l="__l" vue-slots="{{['default']}}"><view class="bht-layout-content"><view class="address-box"><view class="address-icon"><image src="/static/icon/address_loaction_icon.png"></image></view><view class="address-info"><view class="address-info-user"><label class="name">{{dataSource.orderAddress.name}}</label><label class="phone">{{dataSource.orderAddress.phone}}</label></view><view class="address-text">{{dataSource.orderAddress.location+dataSource.orderAddress.detail}}</view></view></view><block wx:for="{{dataSource.orderList}}" wx:for-item="item" wx:for-index="index" wx:key="index"><view class="order-goods-list"><view class="shop-list"><view class="header"><image class="shop-img" src="{{item.storePicture}}"></image><label class="shop-name">{{item.storeName}}</label></view><view class="goods-list"><block wx:for="{{item.goods}}" wx:for-item="pro" wx:for-index="pIndex" wx:key="pIndex"><view class="items"><view class="goods-image"><image src="{{pro.goodsPicture}}"></image></view><view class="goods-details"><label class="goods-name">{{pro.goodsName}}</label><label class="shipping-address">{{pro.attrName+":"+pro.attrValue}}</label></view><view class="goods-pum"><view class="price"><label class="symbol">¥</label><label class="value">{{pro.price}}</label></view><view class="num"><label class="symbol">x</label><label class="value">{{pro.goodsNum}}</label></view></view></view></block></view><view class="desc"><view class="items"><label>商品价格</label><label>{{"¥"+item.orderPrice}}</label></view><view class="items"><label>运费(快递)</label><label>{{"¥"+item.expressPrice}}</label></view><view class="items total"><label>订单总价</label><label>{{"¥"+item.goodsAllPrice}}</label></view></view></view></view></block><view class="order-details"><view class="header"><label>订单信息</label></view><view class="details-list"><view class="items"><label>订单编号</label><label>{{dataSource.orderInfo.mainOrderId}}</label></view><view class="items"><label>交易号</label><label>{{dataSource.orderInfo.payNo}}</label></view><view class="items"><label>创建时间</label><label>{{dataSource.orderInfo.createTime}}</label></view><view class="items"><label>付款时间</label><label>{{dataSource.orderInfo.payTime}}</label></view></view></view></view></bht-layout-container><view class="o-buttom"><block wx:if="{{dataSource.orderInfo.statusCd=='10008'}}"><view class="o-btttom-btn"><button class="border-gray">联系卖家</button><button class="border-gray">取消订单</button><button class="border-red">付款</button></view></block><block wx:if="{{dataSource.orderInfo.statusCd=='10016'}}"><view class="o-btttom-btn"><button class="border-red">修改地址</button></view></block><block wx:if="{{dataSource.orderInfo.statusCd=='10020'}}"><view class="o-btttom-btn"><button class="border-gray">查看物流</button><button class="border-red">确认收货</button></view></block><block wx:if="{{dataSource.orderInfo.statusCd=='10024'}}"><view class="o-btttom-btn"><button class="border-gray">删除订单</button><button class="border-red">评价</button></view></block><block wx:else><view class="o-btttom-btn"></view></block></view></view>
/*统计页面头部 chart-header-bg*/
.goods-image {
  margin-top: 20rpx;
}
.goods-image .item {
    display: -webkit-box;
    display: -webkit-flex;
    display: flex;
    -webkit-box-pack: center;
    -webkit-justify-content: center;
            justify-content: center;
    -webkit-box-align: center;
    -webkit-align-items: center;
            align-items: center;
    height: 80rpx;
    line-height: 80rpx;
    width: 100%;
    background: #ff3333;
}
.goods-image .item .title {
      height: 100%;
      font-size: 30rpx;
      color: #ffffff;
}
.goods-image .item .gray_line {
      background: #e5e5e5;
      width: 80px;
      height: 2px;
      float: left;
      margin: 10px 5px;
}


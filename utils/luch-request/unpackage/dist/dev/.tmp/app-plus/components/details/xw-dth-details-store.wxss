/*统计页面头部 chart-header-bg*/
.goods-store {
  margin-top: 20rpx;
  background: #ffffff;
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  -webkit-box-pack: justify;
  -webkit-justify-content: space-between;
          justify-content: space-between;
  padding: 20rpx;
}
.goods-store .left-item {
    display: -webkit-box;
    display: -webkit-flex;
    display: flex;
    -webkit-box-align: center;
    -webkit-align-items: center;
            align-items: center;
}
.goods-store .left-item image {
      width: 100rpx;
      height: 100rpx;
}
.goods-store .left-item .title {
      color: #333333;
      font-size: 24rpx;
}
.goods-store .left-item .describe {
      color: #999999;
      font-size: 20rpx;
}
.goods-store .right-item {
    display: -webkit-box;
    display: -webkit-flex;
    display: flex;
    -webkit-box-align: center;
    -webkit-align-items: center;
            align-items: center;
}
.goods-store .right-item .baby {
      color: #ff3333;
      font-size: 24rpx;
      border: 1rpx solid #bbbbbb;
      background: #ffffff;
      border-radius: 34rpx;
      opacity: 1;
      margin-right: 20rpx;
}
.goods-store .right-item .go-store {
      color: white;
      font-size: 24rpx;
      border: 1rpx solid #bbbbbb;
      background: -webkit-linear-gradient(347deg, #e42332 0%, #e40011 48%, #e20011 51%, #b10613 100%);
      background: linear-gradient(103deg, #e42332 0%, #e40011 48%, #e20011 51%, #b10613 100%);
      border-radius: 34rpx;
      opacity: 1;
      margin-right: 20rpx;
}


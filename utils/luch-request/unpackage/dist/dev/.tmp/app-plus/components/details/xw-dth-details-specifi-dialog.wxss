@charset "UTF-8";
/*统计标题样式*/
/*box*/
/*统计页面头部 chart-header-bg*/
.layer {
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  width: 100%;
  -webkit-box-orient: vertical;
  -webkit-box-direction: normal;
  -webkit-flex-direction: column;
          flex-direction: column;
  position: fixed;
  z-index: 99;
  bottom: 0;
  border-radius: 10rpx 10rpx 0 0;
  background-color: #fff;
}
.layer .specification-wrapper {
    width: 100%;
    padding: 30rpx 25rpx;
    box-sizing: border-box;
}
.layer .specification-wrapper .specification-wrapper-content {
      width: 100%;
      max-height: 900rpx;
      min-height: 600rpx;
}
.layer .specification-wrapper .specification-wrapper-content::-webkit-scrollbar {
        /*隐藏滚轮*/
        display: none;
}
.layer .specification-wrapper .specification-wrapper-content .specification-header {
        width: 100%;
        display: -webkit-box;
        display: -webkit-flex;
        display: flex;
        -webkit-box-orient: horizontal;
        -webkit-box-direction: normal;
        -webkit-flex-direction: row;
                flex-direction: row;
        position: relative;
        margin-bottom: 40rpx;
}
.layer .specification-wrapper .specification-wrapper-content .specification-header .specification-left {
          width: 180rpx;
          height: 180rpx;
          -webkit-box-flex: 0;
          -webkit-flex: 0 0 180rpx;
                  flex: 0 0 180rpx;
}
.layer .specification-wrapper .specification-wrapper-content .specification-header .specification-left .product-img {
            width: 180rpx;
            height: 180rpx;
            background-color: #999999;
}
.layer .specification-wrapper .specification-wrapper-content .specification-header .specification-right {
          -webkit-box-flex: 1;
          -webkit-flex: 1;
                  flex: 1;
          padding: 0 35rpx 0 28rpx;
          box-sizing: border-box;
          display: -webkit-box;
          display: -webkit-flex;
          display: flex;
          -webkit-box-orient: vertical;
          -webkit-box-direction: normal;
          -webkit-flex-direction: column;
                  flex-direction: column;
          -webkit-box-pack: end;
          -webkit-justify-content: flex-end;
                  justify-content: flex-end;
          font-weight: 500;
}
.layer .specification-wrapper .specification-wrapper-content .specification-header .specification-right .price-content {
            color: #fe3a3a;
            margin-bottom: 20rpx;
}
.layer .specification-wrapper .specification-wrapper-content .specification-header .specification-right .price-content .sign {
              font-size: 28rpx;
}
.layer .specification-wrapper .specification-wrapper-content .specification-header .specification-right .price-content .price {
              font-size: 48rpx;
}
.layer .specification-wrapper .specification-wrapper-content .specification-header .specification-right .inventory {
            font-size: 24rpx;
            color: #999999;
            margin-bottom: 14rpx;
}
.layer .specification-wrapper .specification-wrapper-content .specification-header .specification-right .choose {
            font-size: 28rpx;
            color: #333333;
}
.layer .specification-wrapper .specification-wrapper-content .specification-content {
        font-weight: 500;
}
.layer .specification-wrapper .specification-wrapper-content .specification-content .specification-item {
          margin-bottom: 40rpx;
}
.layer .specification-wrapper .specification-wrapper-content .specification-content .specification-item:last-child {
            margin-bottom: 0;
}
.layer .specification-wrapper .specification-wrapper-content .specification-content .specification-item .item-title {
            margin-bottom: 20rpx;
            font-size: 28rpx;
            color: #999999;
}
.layer .specification-wrapper .specification-wrapper-content .specification-content .specification-item .item-wrapper {
            display: -webkit-box;
            display: -webkit-flex;
            display: flex;
            -webkit-box-orient: horizontal;
            -webkit-box-direction: normal;
            -webkit-flex-direction: row;
                    flex-direction: row;
            -webkit-flex-flow: wrap;
                    flex-flow: wrap;
}
.layer .specification-wrapper .specification-wrapper-content .specification-content .specification-item .item-wrapper .item-content {
              display: inline-block;
              padding: 15rpx 35rpx;
              border-radius: 10rpx;
              background-color: #ffffff;
              color: #333333;
              font-size: 28rpx;
              margin-right: 20rpx;
              border: 2rpx solid #f4f4f4;
              box-sizing: border-box;
}
.layer .specification-wrapper .specification-wrapper-content .specification-content .specification-item .item-wrapper .item-content.actived {
                border-color: #fe3a3a;
                color: #fe3a3a;
}
.layer .specification-wrapper .specification-wrapper-content .specification-content .specification-item .item-wrapper .item-content.noactived {
                background-color: #f4f4f4;
                border-color: #f4f4f4;
}
.layer .specification-wrapper .close {
      position: absolute;
      top: 30rpx;
      right: 25rpx;
      width: 50rpx;
      height: 50rpx;
      text-align: center;
      line-height: 50rpx;
}
.layer .specification-wrapper .close .close-item {
        width: 50rpx;
        height: 50rpx;
}
.layer .btn-wrapper {
    display: -webkit-box;
    display: -webkit-flex;
    display: flex;
    width: 100%;
    height: 120rpx;
    -webkit-box-flex: 0;
    -webkit-flex: 0 0 120rpx;
            flex: 0 0 120rpx;
    -webkit-box-align: center;
    -webkit-align-items: center;
            align-items: center;
    -webkit-box-pack: justify;
    -webkit-justify-content: space-between;
            justify-content: space-between;
    padding: 0 26rpx;
    box-sizing: border-box;
}
.layer .btn-wrapper .layer-btn {
      width: 335rpx;
      height: 76rpx;
      border-radius: 38rpx;
      color: #fff;
      line-height: 76rpx;
      text-align: center;
      font-weight: 500;
      font-size: 28rpx;
}
.layer .btn-wrapper .layer-btn.add-cart {
        background: #ffbe46;
}
.layer .btn-wrapper .layer-btn.buy {
        background: #fe3a3a;
}
.layer .btn-wrapper .sure {
      width: 698rpx;
      height: 76rpx;
      border-radius: 38rpx;
      color: #fff;
      line-height: 76rpx;
      text-align: center;
      font-weight: 500;
      font-size: 28rpx;
      background: #fe3a3a;
}


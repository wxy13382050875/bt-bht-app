@charset "UTF-8";
/*统计标题样式*/
/*box*/
/*统计页面头部 chart-header-bg*/
.goods-list-items {
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  margin-bottom: 18rpx;
  padding: 0 18rpx;
  background-color: #fff;
  border-radius: 10px;
}
.goods-list-items:last-child {
    margin-bottom: 0;
}
.goods-list-items .check {
    display: -webkit-box;
    display: -webkit-flex;
    display: flex;
    -webkit-box-align: center;
    -webkit-align-items: center;
            align-items: center;
    width: 42px;
}
.goods-list-items .info {
    -webkit-box-flex: 1;
    -webkit-flex: 1;
            flex: 1;
}
.goods-list-items .info .info-header {
      display: -webkit-box;
      display: -webkit-flex;
      display: flex;
      -webkit-box-pack: justify;
      -webkit-justify-content: space-between;
              justify-content: space-between;
      -webkit-box-align: center;
      -webkit-align-items: center;
              align-items: center;
      height: 71rpx;
      border-bottom: 2px solid #b2b4b3;
}
.goods-list-items .info .info-header .goods-name {
        -webkit-box-flex: 1;
        -webkit-flex: 1;
                flex: 1;
        text-overflow: hidden;
        font-size: 32rpx;
        color: #333;
}
.goods-list-items .info .info-header .price {
        width: 80px;
        text-align: right;
        color: #ff3333;
}
.goods-list-items .info .info-header .price .symbol {
          font-size: 22rpx;
}
.goods-list-items .info .info-header .price .value {
          font-size: 32rpx;
}
.goods-list-items .info .info-items {
      display: -webkit-box;
      display: -webkit-flex;
      display: flex;
      -webkit-box-align: center;
      -webkit-align-items: center;
              align-items: center;
      -webkit-box-pack: justify;
      -webkit-justify-content: space-between;
              justify-content: space-between;
      height: 54rpx;
      font: 26rpx;
      color: #898989;
      border-bottom: 1px solid #e5e5e5;
}
.goods-list-items .info .info-items:last-child {
        border-bottom: 0;
}


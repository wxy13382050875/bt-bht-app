.stepper-wrapper {
  display: -webkit-inline-box;
  display: -webkit-inline-flex;
  display: inline-flex;
  -webkit-box-orient: horizontal;
  -webkit-box-direction: normal;
  -webkit-flex-direction: row;
          flex-direction: row;
  -webkit-flex-flow: wrap;
          flex-flow: wrap;
}
.stepper-wrapper.small {
  border: 1rpx solid #f4f4f4;
}
.stepper-wrapper.small .reduce,
.stepper-wrapper.small .num-wrapper,
.stepper-wrapper.small .add {
  width: 68rpx;
  height: 60rpx;
}
.stepper-wrapper.small .reduce::after {
  width: 20rpx;
}
.stepper-wrapper.small .add::before,
.stepper-wrapper.small .add::after {
  width: 20rpx;
}
.stepper-wrapper.small .num-wrapper {
  border-radius: 10rpx;
  overflow: hidden;
}
.stepper-wrapper.small .num-wrapper .num-content {
  width: 100%;
  height: 100%;
  border: 1rpx solid #f4f4f4;
  min-height: 60rpx;
  line-height: 60rpx;
  font-size: 28rpx;
  text-align: center;
}
.stepper-wrapper .reduce,
.stepper-wrapper .num-wrapper,
.stepper-wrapper .add {
  width: 100rpx;
  height: 56rpx;
  position: relative;
}
.stepper-wrapper .reduce::after {
  content: '';
  position: absolute;
  left: 0;
  right: 0;
  top: 0;
  bottom: 0;
  width: 28rpx;
  height: 4rpx;
  border-radius: 2rpx;
  background-color: #333333;
  margin: auto;
}
.stepper-wrapper .reduce.noclick::after {
  background-color: #cccccc;
}
.stepper-wrapper .num-wrapper {
  border-radius: 10rpx;
  overflow: hidden;
}
.stepper-wrapper .num-wrapper .num-content {
  width: 100%;
  height: 100%;
  border: 1rpx solid #f4f4f4;
  min-height: 56rpx;
  line-height: 56rpx;
  font-size: 30rpx;
  text-align: center;
}
.stepper-wrapper .add::before,
.stepper-wrapper .add::after {
  content: '';
  position: absolute;
  left: 0;
  right: 0;
  top: 0;
  bottom: 0;
  width: 28rpx;
  height: 4rpx;
  border-radius: 2rpx;
  background-color: #333333;
  margin: auto;
}
.stepper-wrapper .add::after {
  -webkit-transform: rotate(90deg);
          transform: rotate(90deg);
}
.stepper-wrapper .add.noclick::before,
.stepper-wrapper .add.noclick::after {
  background-color: #cccccc;
}


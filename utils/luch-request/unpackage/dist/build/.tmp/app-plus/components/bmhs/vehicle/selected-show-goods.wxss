    padding: 0 18rpx;
    margin-bottom: 18rpx;
    display: -webkit-box;
    display: -webkit-flex;
    display: flex;
    -webkit-box-align: center;
    -webkit-align-items: center;
            align-items: center;
    background-color: #fff;
}

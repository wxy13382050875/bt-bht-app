@charset "UTF-8";
/*统计标题样式*/
/*box*/
/*统计页面头部 chart-header-bg*/
.goods-list {
  border-bottom: 1rpx solid #a7a7a7;
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  background: #ffffff;
  padding: 10rpx;
}
.goods-list .goods-image image {
    width: 240rpx;
    height: 240rpx;
}
.goods-list .goods-info {
    margin-left: 28rpx;
    height: 240rpx;
    -webkit-box-align: center;
    -webkit-align-items: center;
            align-items: center;
    width: 100%;
    margin-right: 20rpx;
}
.goods-list .goods-info .title {
      font-size: 26rpx;
      color: #333333;
}
.goods-list .goods-info .details {
      height: 80rpx;
      line-height: 80rpx;
      font-size: 22rpx;
      color: #999999;
}
.goods-list .goods-info .goods-price {
      height: 80rpx;
      line-height: 80rpx;
      display: -webkit-box;
      display: -webkit-flex;
      display: flex;
      -webkit-box-pack: justify;
      -webkit-justify-content: space-between;
              justify-content: space-between;
}
.goods-list .goods-info .goods-price .nprice {
        font-size: 32rpx;
        color: #ff3333;
}
.goods-list .goods-info .goods-price .oprice {
        margin-left: 20rpx;
        text-decoration: line-through;
        font-size: 22rpx;
        color: #999999;
}
.goods-list .goods-info .goods-price .number {
        font-size: 22rpx;
        color: #999999;
}


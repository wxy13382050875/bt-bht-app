    margin-top: 68rpx;
    display: -webkit-box;
    display: -webkit-flex;
    display: flex;
}
.pay-success-container .pay-success-message .btn-group .btn {
      width: 182rpx;
      height: 60rpx;
      line-height: 60rpx;
      text-align: center;
      color: #fff;
      border: 1px solid white;
      border-radius: 41px;
}
.pay-success-container .pay-success-message .btn-group .btn:last-child {
      margin-left: 53rpx;
}
.pay-success-container .pay-success-message .welcome-txt {
    margin-top: 54rpx;
    font-size: 26rpx;
    color: #fff;
